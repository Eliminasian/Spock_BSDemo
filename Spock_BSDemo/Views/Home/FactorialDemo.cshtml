
@{
    ViewBag.Title = "FactorialDemo";
}

<h2>Factorial Demo</h2>

<div class="row">
    <div class="col-md-12" text-center h2>
        Factorial Demolition
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="row">
            <input id="fact" type="number" placeholder="Enter a number"/>
        </div>
    <div class="row">
        <div class="col-md-3">
            <button id="btnFact" class="btn btn-danger">Calculate</button>
        </div>
    <div class="row">
        <div class="col-md-3">
            <button id="btnClr" class="btn btn-danger">Clear</button>
        </div>
    </div>
    
    </div>
    </div>
    
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12 text-center h4">
                <u>Results...</u>
            </div>
        </div>
    <div class="row">
        <div class="col-md-6" id="factOut">

        </div>
    </div>
    </div>
</div>





@section scripts{
    
    <script>
        //I need a click event handler for the button
        $("#btnFact").click(function () {
           //Step 1: Get the user data
            var number = +$("#fact").val();

            //User input error
            //Using If statement to evalulate something
            if (number > 170) {
                alert("Enter positive numbers less than 171!");
                $("#fact").val();
                return;
            }

           //Step 2: Calculate the Factorial
            for (var loop = number -1; loop > 1; loop--) {
               //How do we calculate the factorial
               //number = number * loop
                number *= loop;
            }

           //Step 3: Show the result
            $("#factOut").text(number);

           
        })

        $("#btnClear").click(function () {
            //Clear the input
            $("#fact").val("");
        });
    </script>

    }







